#!/usr/bin/env php
<?php

declare(strict_types=1);

if (\PHP_VERSION_ID < 70400) {
    echo 'Your CLI is running PHP version ' . \PHP_VERSION . ' but Dockerizer requires at least PHP 7.4.0' . \PHP_EOL;
    exit(1);
}

ini_set('error_reporting', 'E_ALL & ~E_DEPRECATED');
ini_set('display_errors', 'On');
ini_set('display_startup_errors', 'On');

set_time_limit(0);

require_once __DIR__ . '/../vendor/autoload.php';

try {
    $kernel = new \App\Kernel();
    $application = $kernel->getApplication([dirname(__DIR__) . '/config']);

    $application->run();
} catch (\Throwable $e) {
    echo $e->getMessage();
}

///** @var \Symfony\Component\Dotenv\Dotenv $dotenv */
//$dotenv = $containerBuilder->get('app.dotenv');
//$dotenv->usePutenv();
//$dotenv->load(__DIR__ . '/../.env.dist', __DIR__ . '/../.env.local');